<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_username_message_list"
            android:paddingTop="4dp"
            android:paddingLeft="4dp"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date_message_list"
            android:text="09:56"
            android:paddingBottom="4dp"
            android:paddingRight="4dp"
            android:textSize="12sp"
            android:layout_toLeftOf="@+id/tv_carrot"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_message_message_list"
            android:paddingTop="4dp"
            android:paddingLeft="4dp"
            android:paddingBottom="4dp"
            android:textSize="12sp"
            android:layout_below="@+id/tv_username_message_list"/>

        <TextView
            android:id="@+id/tv_carrot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=">"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>